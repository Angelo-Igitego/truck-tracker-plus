<!doctype html>
  <html lang="en">
  <head>
   <meta charset="utf-8">
   <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

   <title>Prime CargoTracker</title>
   <%= csrf_meta_tags %>
   <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
   <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
   <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

 </head>

 <body class="">
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <!-- <img src="https://www.primeintlcarriers.com/wp-content/uploads/2017/10/Logo_update.png" alt="" width="114"> -->
        <%= image_tag("https://www.primeintlcarriers.com/wp-content/uploads/2017/10/Logo_update.png", width: 114, height: 50)-%>
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
         <%= link_to "Tracking", '/', class: "nav-link nav-item" -%>

         <% if current_user -%>
         <%= link_to "Shipments", containers_path, class: "nav-link nav-item" -%>
         <% if !current_user.driver?-%>
         <%= link_to "Customers", customers_path, class: "nav-link nav-item" -%>     
         <%= link_to "Vehicles", trucks_path, class: "nav-link nav-item" -%>
         <% end -%>
         <%= link_to "Ports", ports_path, class: "nav-link nav-item" -%>

         <%= link_to "#{current_user.type} account", edit_user_registration_path, class: "nav-link nav-item" -%>

         <%= link_to "Logout", destroy_user_session_path,method: :delete,  class: "nav-link nav-item" -%>

         <%= link_to "Back office", "/admin", class: "nav-item btn btn-success" if current_user.type == "Admin"-%>

         <%#= link_to  edit_user_registration_path, class: "nav-link nav-item" do %>
         <!-- <span class="icon"><i class="fa fa-user"></i></span> My account -->
         <%# end %>


         <%#= link_to destroy_user_session_path, method: :delete, class: "nav-link nav-item" do %>
         <!-- <span class="icon"><i class="fa fa-sign-out"></i></span> Logout -->
         <%# end %>


         <% end -%>

         <% if !current_user -%>

         <%= link_to "Sign in", new_user_session_path, class: "nav-link nav-item" -%>

         <%= link_to "Sign up", new_user_registration_path, class: "nav-link nav-item" -%>
         <% end -%>

       </ul>
     </div>
   </div>
 </nav>

 <!-- Page Content -->
 <div class="">
  <!-- Alerts notification -->
  <% if alert or notice %>
  <div class="alert alert-primary" role="alert">
    <%= alert if alert %>
    <%= notice if notice %>
  </div>

  <% end %>


  <%= yield %>
</div>


</body>

</html>


<style type="text/css">
body {

  padding-top: 4.5rem;
  margin-top:  0.2rem;
  height:100vh;
  min-height:100%;
  max-height:100%;
}
</style>