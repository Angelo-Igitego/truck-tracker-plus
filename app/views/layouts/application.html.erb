<!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">
      <img src="https://www.primeintlcarriers.com/wp-content/uploads/2017/10/Logo_update.png" alt="" width="114">
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarResponsive">
      <ul class="navbar-nav ml-auto">
       <%= link_to "Tracking", '/tracking', class: "nav-link nav-item" -%>
       <%= link_to "Shipments", containers_path, class: "nav-link nav-item" -%>

       <%= link_to "Vehicles", trucks_path, class: "nav-link nav-item" -%>
       <%= link_to "Drivers", "#", class: "nav-link nav-item" -%>     
       <%= link_to "Ports", ports_path, class: "nav-link nav-item" -%>
     </ul>
   </div>
 </div>
</nav>

<!-- Page Content -->
<div class="container-fluid">
  <!-- Alerts notification -->
  <% if alert or notice %>
  <div class="alert alert-primary" role="alert">
    <%= alert if alert %>
    <%= notice if notice %>
  </div>

  <% end %>


  <%= yield %>
</div>

