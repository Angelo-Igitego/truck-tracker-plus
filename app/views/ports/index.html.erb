<div class="container">

  <div class="wp-75 pt-4">
    <div class="table-responsive">

      <h3>Shipping ports list</h3>
      <table id="example" class="table table-responsive-sm table-striped table-bordered">

       <thead>
        <tr>
          <th>Name</th>
          <th>Country</th>
          <th colspan=""></th>
        </tr>
      </thead>

      <tbody>
        <% @ports.each do |port| %>
        <tr>
          <td><%= port.name %></td>
          <td><%= port.country %></td>
          <td>
            <%= link_to 'Show', port %>
            <% unless current_user.driver? -%>
            <%= link_to 'Edit', edit_port_path(port) %>
            <%= link_to 'Destroy', port, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end -%>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <br>

  <%= link_to 'New port', new_port_path , class: "btn btn-primary" %>

</div>
</div>
