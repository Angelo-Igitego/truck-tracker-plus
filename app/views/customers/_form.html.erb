<%= simple_form_for(@customer) do |f| %>
<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<div class="controls form-inputs">
  <div class="row">
    <div class="col-sm-6"> <%= f.input :business_name, id: :customer_business_name %> </div>

    <div class="col-sm-6"> <%= f.input :po_box, id: :customer_po_box %>
    </div>

    <div class="col-sm-6">
      <%= f.input :phone, id: :customer_phone %>
    </div>

    <div class="col-sm-6">
      <%= f.input :email, id: :customer_email %>
    </div>

    <div class="col-sm-6">
      <%= f.input :contact_person_names, id: :customer_contact_person_names %>
    </div>

    <div class="col-sm-6">
      <%= f.input :contact_person_phone, id: :customer_contact_person_phone %>
    </div>

    <div class="col-sm-6">
      <%= f.input :tin_number, id: :customer_tin_number %>
    </div>

    <div class="col-sm-6">
      <%= f.input :office_location, id: :customer_office_location %>
    </div>
  </div>

</div>
<br>
<div class="actions">
  <%= f.submit "Submit", class: "btn btn-primary" %>
</div>
<% end %>

<br>

