<div class="container">

  <div class="wp-75 pt-4">
    <div class="table-responsive">

      <h3>Trucks list</h3>
      <table id="example" class="table table-responsive-sm table-striped table-bordered">
        <thead>
          <tr>
            <th>Model</th>
            <th>Tare</th>
            <th>License number</th>
            <th>Unique number</th>
            <th>Action</th>
          </tr>
        </thead>

        <tbody>
          <% @trucks.each do |truck| %>
          <tr>
            <td><%= truck.model %></td>
            <td><%= truck.tare %></td>
            <td><%= truck.license_number %></td>
            <td><%= truck.unique_number %></td>
            <td>

              <%= link_to 'Show', truck %>
              <% if !current_user.driver? -%>
              <%= link_to 'Edit', edit_truck_path(truck) %>
              <%= link_to 'Destroy', truck, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end -%>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <br>

    <%= link_to 'New truck', new_truck_path , class: "btn btn-primary" %>

  </div>
</div>
