
<div class="container pt-4 w-50">

  <h3> Truck information </h3>  

  <p>
    <strong>License number:</strong>
    <%= @truck.license_number %>
  </p>

  <p>
    <strong>Unique number:</strong>
    <%= @truck.unique_number %>
  </p>


  <p>
    <strong>Model:</strong>
    <%= @truck.model %>
  </p>

  <p>
    <strong>Tare:</strong>
    <%= @truck.tare %>
  </p>


  <% unless current_user.driver? -%>
  <%= link_to 'Edit', edit_truck_path(@truck) %> |
  <%= link_to 'Back', trucks_path %>
  <% end -%>
</div>