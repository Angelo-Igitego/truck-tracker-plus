<p id="notice"><%= notice %></p>

<h1>Trips</h1>

<table>
  <thead>
    <tr>
      <th>Truck</th>
      <th>Shipment</th>
      <th>Driver</th>
      <th>Number</th>
      <th>Loading port</th>
      <th>Offloading site</th>
      <th>Onloaded at</th>
      <th>Offloaded at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.truck %></td>
        <td><%= trip.shipment %></td>
        <td><%= trip.driver_id %></td>
        <td><%= trip.number %></td>
        <td><%= trip.loading_port_id %></td>
        <td><%= trip.offloading_site %></td>
        <td><%= trip.onloaded_at %></td>
        <td><%= trip.offloaded_at %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

