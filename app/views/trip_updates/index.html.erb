<p id="notice"><%= notice %></p>

<h1>Trip Updates</h1>

<table>
  <thead>
    <tr>
      <th>Trip</th>
      <th>Location details</th>
      <th>Eta border</th>
      <th>Eta site</th>
      <th>Updated by user</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Country</th>
      <th>Province</th>
      <th>District</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trip_updates.each do |trip_update| %>
      <tr>
        <td><%= trip_update.trip %></td>
        <td><%= trip_update.location_details %></td>
        <td><%= trip_update.eta_border %></td>
        <td><%= trip_update.eta_site %></td>
        <td><%= trip_update.updated_by_user_id %></td>
        <td><%= trip_update.latitude %></td>
        <td><%= trip_update.longitude %></td>
        <td><%= trip_update.country %></td>
        <td><%= trip_update.province %></td>
        <td><%= trip_update.district %></td>
        <td><%= link_to 'Show', trip_update %></td>
        <td><%= link_to 'Edit', edit_trip_update_path(trip_update) %></td>
        <td><%= link_to 'Destroy', trip_update, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

