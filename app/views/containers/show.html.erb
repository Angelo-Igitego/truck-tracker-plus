
<div class="container">

  <h3> Shipment information </h3>  

  <p>
    <strong>Number:</strong>
    <%= @container.number %>
  </p>

  <p>
    <strong>Driver:</strong>
    <%= @container.driver.name %>
  </p>

  <p>
    <strong>Docs rcd:</strong>
    <%= @container.docs_rcd %>
  </p>

  <p>
    <strong>Shipper:</strong>
    <%= @container.shipper %>
  </p>

  <p>
    <strong>Port of loading:</strong>
    <%= @container.port_of_loading.name %>
  </p>

  <p>
    <strong>Commodity:</strong>
    <%= @container.commodity %>
  </p>

  <p>
    <strong>Bill of ladding number:</strong>
    <%= @container.bill_of_ladding_number %>
  </p>

  <p>
