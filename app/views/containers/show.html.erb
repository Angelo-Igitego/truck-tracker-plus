  <p>
    <strong>Truck position:</strong>
    <%= @container.truck_position %>
  </p>

  <p>
    <strong>ETA border:</strong>
    <%= @container.eta_border %>
  </p>

  <p>
    <strong>ETD border:</strong>
    <%= @container.etd_border %>
  </p>

  <p>
    <strong>Offloading site:</strong>
    <%= @container.offloading_site %>
  </p>

  <p>
    <strong>ETA site:</strong>
    <%= @container.eta_site %>
  </p>

  <p>
    <strong>Offloaded:</strong>
    <%= @container.offloaded_at %>
  </p>

  <p>
    <strong>Remark:</strong>
    <%= @container.remark %>
  </p>

  <%= link_to 'Edit', edit_container_path(@container) %> |
  <%= link_to 'Back', containers_path %>

</div>